@{
    ViewData["Title"] = "World Cup Analytics";
}

<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 d-flex flex-column justify-content-center pt-4 pt-lg-0 order-2 order-lg-1">
                <h1>Advanced Football Analytics</h1>
                <h2>Historical World Cup data with AI-powered predictions</h2>
                <div class="d-flex justify-content-center justify-content-lg-start">
                    <a href="/Matches" class="btn-get-started">Explore Matches</a>
                    <a href="/Analytics" class="btn-get-started ms-3">View Predictions</a>
                </div>
            </div>
            <div class="col-lg-6 order-1 order-lg-2 hero-img">
                <img src="~/img/football-stadium.jpg" class="img-fluid" alt="Football Stadium">
            </div>
        </div>
    </div>
</section>

<main id="main">
    <section id="stats" class="stats-counter">
        <div class="container">
            <div class="row gy-4">
                <div class="col-lg-3 col-md-6">
                    <div class="stats-item text-center w-100">
                        <i class="fas fa-futbol fa-3x text-primary mb-3"></i>
                        <span>128</span>
                        <p>Tournaments Analyzed</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="stats-item text-center w-100">
                        <i class="fas fa-trophy fa-3x text-primary mb-3"></i>
                        <span>2,450</span>
                        <p>World Cup Matches</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="stats-item text-center w-100">
                        <i class="fas fa-users fa-3x text-primary mb-3"></i>
                        <span>85</span>
                        <p>Countries Covered</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="stats-item text-center w-100">
                        <i class="fas fa-brain fa-3x text-primary mb-3"></i>
                        <span>92%</span>
                        <p>Prediction Accuracy</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="recent-tournaments" class="services">
        <div class="container">
            <div class="section-header">
                <h2>Recent World Cups</h2>
                <p>Explore historical data and analytics</p>
            </div>

            <div class="row">
                <div class="col-md-6 col-lg-3 d-flex align-items-stretch mb-5 mb-lg-0">
                    <div class="service-item position-relative">
                        <div class="icon">
                            <i class="fas fa-2"></i>
                        </div>
                        <h3>Russia 2018</h3>
                        <p>France claimed their second title in a thrilling tournament</p>
                        <a href="/Matches?year=2018" class="btn btn-sm btn-outline-primary mt-2">View Matches</a>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3 d-flex align-items-stretch mb-5 mb-lg-0">
                    <div class="service-item position-relative">
                        <div class="icon">
                            <i class="fas fa-2"></i>
                        </div>
                        <h3>Brazil 2014</h3>
                        <p>Germany's historic 7-1 victory over Brazil</p>
                        <a href="/Matches?year=2014" class="btn btn-sm btn-outline-primary mt-2">View Matches</a>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3 d-flex align-items-stretch mb-5 mb-lg-0">
                    <div class="service-item position-relative">
                        <div class="icon">
                            <i class="fas fa-2"></i>
                        </div>
                        <h3>South Africa 2010</h3>
                        <p>Spain's first World Cup victory with tiki-taka football</p>
                        <a href="/Matches?year=2010" class="btn btn-sm btn-outline-primary mt-2">View Matches</a>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3 d-flex align-items-stretch mb-5 mb-lg-0">
                    <div class="service-item position-relative">
                        <div class="icon">
                            <i class="fas fa-2"></i>
                        </div>
                        <h3>France 1998</h3>
                        <p>Host nation's first title with Zidane's brilliance</p>
                        <a href="/Matches?year=1998" class="btn btn-sm btn-outline-primary mt-2">View Matches</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
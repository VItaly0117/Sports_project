@model FootballMatch

@{
    ViewData["Title"] = "Match Details";
}

<h1>Match Details</h1>

<div>
    <h4>@Model.Team1 vs @Model.Team2</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToString("dd MMM yyyy")</dd>

        <dt class="col-sm-2">Score</dt>
        <dd class="col-sm-10">@Model.Score1 - @Model.Score2</dd>

        <dt class="col-sm-2">Stage</dt>
        <dd class="col-sm-10">@Model.Stage</dd>

        <dt class="col-sm-2">Group</dt>
        <dd class="col-sm-10">@Model.Group</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>

        <dt class="col-sm-2">Tournament</dt>
        <dd class="col-sm-10">@Model.Tournament?.Name</dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
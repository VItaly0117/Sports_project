@model List<MatchMode>
@{
    var tournament = ViewBag.Tournament as Tournament;
    var stage = ViewBag.Stage as string;
    var years = ViewBag.Years as List<int>;
}

<section class="breadcrumbs">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h2>@tournament.Name - @stage Stage</h2>
            <ol>
                <li><a href="/">Home</a></li>
                <li>Matches</li>
            </ol>
        </div>
    </div>
</section>

<section class="inner-page">
    <div class="container">
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="d-flex align-items-center">
                    <label class="me-2">Year:</label>
                    <select id="yearSelect" class="form-select me-3" style="width: auto;">
                        @foreach (var y in years)
                        {
                            <option value="@y" selected="@(y == tournament.Year)">@y</option>
                        }
                    </select>

                    <label class="me-2">Stage:</label>
                    <select id="stageSelect" class="form-select" style="width: auto;">
                        <option value="Group" selected="@(stage == "Group")">Group Stage</option>
                        <option value="Round of 16" selected="@(stage == "Round of 16")">Round of 16</option>
                        <option value="Quarter-finals" selected="@(stage == "Quarter-finals")">Quarter-finals</option>
                        <option value="Semi-finals" selected="@(stage == "Semi-finals")">Semi-finals</option>
                        <option value="Final" selected="@(stage == "Final")">Final</option>
                    </select>
                </div>
            </div>
        </div>

        @foreach (var group in Model.GroupBy(m => m.Group).OrderBy(g => g.Key))
        {
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Group @group.Key</h3>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Date</th>
                                    <th>Match</th>
                                    <th>Result</th>
                                    <th>Location</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var match in group)
                                {
                                    <tr>
                                        <td>@match.Date.ToString("dd MMM yyyy")</td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@match.Id">
                                                @match.Team1 vs @match.Team2
                                            </a>
                                        </td>
                                        <td>
                                            @if (match.Score1.HasValue && match.Score2.HasValue)
                                            {
                                                <span class="badge bg-primary">@match.Score1 - @match.Score2</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>@match.Location</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

@section Scripts {
    <script>
        document.getElementById('yearSelect').addEventListener('change', function() {
            updateMatches();
        });

        document.getElementById('stageSelect').addEventListener('change', function() {
            updateMatches();
        });

        function updateMatches() {
            const year = document.getElementById('yearSelect').value;
            const stage = document.getElementById('stageSelect').value;
            window.location.href = `/Matches?year=${year}&stage=${stage}`;
        }
    </script>
}
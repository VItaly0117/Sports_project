@model IEnumerable<FootballMatch>

@{
    ViewData["Title"] = "Football Matches";
}

<h1>Football Matches</h1>

<div class="mb-3">
    <form method="get" class="row g-3">
        <div class="col-md-4">
            <label class="form-label">Year</label>
            <select name="year" class="form-select" onchange="this.form.submit()">
                @foreach (var year in ViewBag.Years)
                {
                    <option value="@year" selected="@(year == ViewBag.Tournament?.Year)">@year</option>
                }
            </select>
        </div>
    </form>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Team 1</th>
            <th>Score</th>
            <th>Team 2</th>
            <th>Stage</th>
            <th>Location</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var match in Model)
        {
            <tr>
                <td>@match.Date.ToString("dd MMM yyyy")</td>
                <td>@match.Team1</td>
                <td>@match.Score1 - @match.Score2</td>
                <td>@match.Team2</td>
                <td>@match.Stage</td>
                <td>@match.Location</td>
            </tr>
        }
    </tbody>
</table>